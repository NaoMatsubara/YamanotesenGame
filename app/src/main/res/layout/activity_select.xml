<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity">

    <Button
        android:id="@+id/odai4"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="SelectOdai"
        android:text="お題4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odai3" />

    <Button
        android:id="@+id/odai3"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="SelectOdai"
        android:text="お題3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odai2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="375dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text="お題選択"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="decideOdai"
        android:text="決定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odai4" />

    <Button
        android:id="@+id/odai1"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:onClick="SelectOdai"
        android:text="お題1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/odai2"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="SelectOdai"
        android:text="お題2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odai1" />

</androidx.constraintlayout.widget.ConstraintLayout>